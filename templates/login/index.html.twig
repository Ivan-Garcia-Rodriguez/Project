{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}



{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

   

<div class="page-content">
    <h1 id="logIn"><a class="letraBanner">LOG</a><a>IN</a></h1>
    <form action="{{ path('app_login') }}" method="post" id="centrao">
        <a class="formuDiv">Email:</a>
        <input type="text" id="username" name="_username" value="{{ last_username }}">

        <a class="formuDiv">Password:</a>
        <input type="password" id="password" name="_password" >

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="/main"> 
    <br>
        <button type="submit" class="formuDiv">login</button>
    </form>
</div>
{% endblock %}
